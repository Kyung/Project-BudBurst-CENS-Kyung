<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout  
    	android:id="@+id/logo_layout"
	    android:layout_width="fill_parent" 
	    android:layout_height="63px"
	    android:gravity="center"
	    android:orientation="horizontal"
	    android:background="@color/BudBurstBackground">
	    <ImageView 
	    	android:id="@+id/logo"
	     	android:layout_width="wrap_content"
		 	android:layout_height="wrap_content"
	     	android:src="@drawable/header_small_modified" 
	     	android:layout_centerInParent="true"
	     	android:layout_gravity="center" 
	     	android:paddingLeft="0px" 
	     	android:layout_centerVertical="true" 
	     	android:paddingBottom="0px" 
	     	android:paddingTop="8px"/>
	    <!-- 
	    <cens.ucla.edu.budburst.helper.CustomButton
	        android:id="@+id/myplant"
			android:layout_width="wrap_content"
	        android:layout_height="29dip"
	        android:layout_alignParentTop="true" 
	        android:text="My Plants"/>
		<cens.ucla.edu.budburst.helper.CustomButton
			android:id="@+id/sharedplant"
			android:layout_width="wrap_content"
	        android:layout_height="29dip"
	        android:layout_alignParentTop="true" 
	        android:text="Shared Plants"/>	        
	     -->   	
	     
	</LinearLayout>        
	
	<ScrollView
		android:layout_below="@+id/logo_layout"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:paddingTop="15dip"
		android:id="@+id/HelloScroll"
		>
		<TextView
			android:id="@+id/hello_textview"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent"
			android:paddingLeft="20px"
			android:paddingRight="20px"
			android:textSize="18dip"/>
	</ScrollView>
	
	<Button
		android:id="@+id/sync"
		android:textColor="@drawable/black"
		android:layout_height="wrap_content"
		android:layout_margin="13dip"
		android:layout_centerHorizontal="true"
		android:layout_alignParentBottom="true"
		android:textSize="20dip"
		android:focusable="true"
	android:text="@string/Button_synchronize" android:layout_width="wrap_content"/>
	
</RelativeLayout>
