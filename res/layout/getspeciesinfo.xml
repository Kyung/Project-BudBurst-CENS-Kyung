<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
	<LinearLayout
	android:id="@+id/header"
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
  	android:orientation="horizontal"
  	android:paddingLeft="7dip"
  	android:paddingTop="7dip"
  	android:paddingBottom="15dip"
  	android:background="@drawable/bg_line">
  	<ImageView
		android:paddingTop="3dip"
		android:layout_width="60px" 
		android:layout_height="60px"
		android:id="@+id/species_image" 
		android:adjustViewBounds="true"
	/>
	<TextView
		android:paddingTop="1dip"
		android:paddingLeft="2dip"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/species_name"
		android:adjustViewBounds="true"
		android:textSize="17px"
		android:textStyle="italic|bold"
		android:layout_marginLeft="3px"
		android:focusable="true"
		android:focusableInTouchMode="true"
	/>
	</LinearLayout>    
 
	<ScrollView
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent"
		android:layout_marginTop="5px"
		android:layout_marginLeft="5px"
		android:layout_marginRight="5px" 
		android:layout_below="@+id/header">

	<LinearLayout 
		android:id="@+id/observation_linear_layout"
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent" 
		android:layout_below="@+id/phenophase_bar"
		android:gravity="center"
		android:paddingLeft="7dip"
		android:paddingRight="7dip"
		android:orientation="vertical"
		android:background="@drawable/box_drawable_yellow">
				
				
		<TextView
  			android:layout_width="fill_parent"
  			android:layout_height="wrap_content"
  			android:text="Make your observation"
  			android:textSize="18px"
  			android:textStyle="bold"
  			android:gravity="center"
  			android:layout_marginTop="5px"
  			android:layout_marginBottom="5px"
  			android:id="@+id/title_text"
  		/>

		<TextView
			android:paddingTop="1dip"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content" 
			android:textColor="@drawable/black" 
			android:layout_gravity="left"
			android:textStyle="bold" 
			android:text="Step 1. Take a Photo"
			android:background="@drawable/bg_line_top"
			android:textSize="16dip"
			/>
			
		<ImageButton 
			android:scaleType="fitCenter"
			android:paddingTop="3dip"
			android:paddingLeft="13dip"
			android:paddingRight="13dip"
			android:layout_width="110px" 
			android:layout_height="110px" 
			android:id="@+id/image" 
			android:adjustViewBounds="true"
			/>
			
		<LinearLayout 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content" 
			android:paddingTop="7dip"
			android:paddingBottom="15dip"
			android:gravity="center"
			android:orientation="horizontal">

			<LinearLayout
				android:id="@+id/take_photo" 
				android:layout_width="wrap_content" 
				android:layout_height="40dip"
				android:background="@layout/button_field"
				android:clickable="true"
				android:gravity="center"
				android:focusable="true">
				
				<TextView
					android:id="@+id/take_photo_text" 
					android:textColor="@drawable/black"
					android:layout_width="fill_parent" 
					android:layout_height="fill_parent"
					android:layout_gravity="bottom"
					android:text="Take Photo" 
					/>
					
				<ImageView
					android:layout_width="wrap_content"			
					android:layout_height="fill_parent"
					android:src="@drawable/ic_menu_camera_icon" 
					/>
				
			</LinearLayout>
		
			<LinearLayout
				android:id="@+id/replace_photo" 
				android:layout_width="wrap_content" 
				android:layout_height="40dip"
				android:background="@layout/button_field"
				android:clickable="true"
				android:gravity="center"
				android:focusable="true">
				
				<TextView
					android:id="@+id/replace_photo_text" 
					android:textColor="@drawable/black"
					android:layout_width="fill_parent" 
					android:layout_height="fill_parent"
					android:layout_gravity="bottom"
					android:text="Replace Photo" />
					
				<ImageView
					android:layout_width="wrap_content" 
					android:layout_height="fill_parent"
					android:src="@drawable/ic_menu_camera_icon" 
					/>
				
			</LinearLayout>
					
		</LinearLayout>

		<TextView
			android:paddingTop="1dip"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content" 
			android:textColor="@drawable/black" 
			android:layout_gravity="left"
			android:textStyle="bold" 
			android:text="Step 2. Select Phenophase"
			android:textSize="16dip"
			android:background="@drawable/bg_line_top"
			/>		
			
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:id="@+id/pheno_box"
		>			
			<ImageView
				android:scaleType="fitCenter"
				android:paddingTop="1dip"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:id="@+id/pheno_image" 
				android:adjustViewBounds="true"
			/>
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="vertical"
			>
			<TextView
			android:paddingLeft="6dip"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:layout_gravity="left" 
			android:textColor="@drawable/black"
			android:textSize="16dip" 
			android:textStyle="bold" 
			android:id="@+id/pheno_name"
			android:focusableInTouchMode="true"
			android:focusable="true"
			/>
			<!-- 
			<TextView
			android:paddingTop="1dip"
			android:paddingLeft="6dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/pheno_text"
			android:adjustViewBounds="true"
			/>
			 -->
			</LinearLayout>
		</LinearLayout>
		<Button
			android:id="@+id/phenophase" 
			android:textColor="@drawable/black"
			android:paddingTop="3dip"
			android:paddingBottom="15dip"
			android:layout_marginTop="5px"
			android:layout_width="200px"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:textStyle="bold"
			android:textSize="16dip"
			android:text="Select Phenophase"
			android:focusable="true"
			/>
			
		
		<TextView
			android:paddingTop="3dip"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content" 
			android:textColor="@drawable/black" 
			android:layout_gravity="left"
			android:textStyle="bold" 
			android:text="Step 3. Add Notes"
			android:textSize="16dip"
			android:background="@drawable/bg_line_top"
			/>	

		<EditText
			android:id="@+id/notes"
			android:paddingTop="3dip"
			android:imeOptions="actionDone"
			android:layout_width="250px" 
			android:layout_height="wrap_content"
			android:width="0dip"
			android:inputType="textAutoCorrect|textMultiLine|textImeMultiLine"
			android:gravity="top" 
			android:hint="Input note here"
			android:lines="4"
			android:paddingBottom="10dip"
			/>
			
		<LinearLayout
			android:paddingTop="3dip" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:paddingBottom="10dip">
				
			<Button
				android:id="@+id/save" 
				android:textColor="@drawable/black"
				android:layout_width="250px" 
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:textStyle="bold"
				android:textSize="16dip"
				android:text="See Summary"
				android:focusable="true"
			/>
		</LinearLayout>
	</LinearLayout>
</ScrollView>
</RelativeLayout>

