<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <TextView
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:id="@+id/header_text"
    	android:text="The list includes 10 most wanted species in America. Check 'Show All Plants' to show all the plants."
    	android:textSize="18px"
    	android:textColor="@drawable/black"
    	android:paddingLeft="7px"
    	android:paddingTop="7px"
    />
    <LinearLayout
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_below="@+id/header_text"
    	android:orientation="horizontal"
    	android:id="@+id/header_box"
    >
	<CheckBox
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/header"
		android:text="Show All Plants"
	/>
	<CheckBox
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="15px"
		android:id="@+id/header2"
		android:text="Show Category"
		android:visibility="gone"
		android:checked="false"
	/>
	</LinearLayout>
	<ListView
		android:id="@android:id/list"
		android:layout_below="@+id/header_box"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"/>
</RelativeLayout>