<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
 
   <LinearLayout
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
  	android:orientation="horizontal"
  	android:paddingLeft="7dip"
  	android:paddingTop="7dip"
  	android:paddingBottom="15dip"
  	android:background="@drawable/bg_line"
  	android:id="@+id/header">
  	<ImageView
		android:paddingTop="3dip"
		android:layout_width="60px" 
		android:layout_height="60px"
		android:id="@+id/species_image" 
		android:adjustViewBounds="true"
	/>
	<TextView
		android:paddingTop="1dip"
		android:paddingLeft="2dip"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/species_name"
		android:adjustViewBounds="true"
		android:textSize="17px"
		android:textStyle="italic|bold"
		android:layout_marginLeft="3px"
	/>
	</LinearLayout> 

	<ScrollView
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent" 
		android:layout_below="@+id/header">

	<LinearLayout 
		android:id="@+id/observation_linear_layout"
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent" 
		android:layout_below="@+id/phenophase_bar"
		android:gravity="center"
		android:orientation="vertical">
		
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="5px"
			android:layout_marginBottom="15px"
			android:orientation="horizontal"
			android:paddingTop="10dip"
			android:paddingLeft="7dip"
			android:paddingRight="7dip"
			android:background="@drawable/bg_line_top">
		<ImageView
			android:paddingTop="6dip"
			android:layout_width="60px" 
			android:layout_height="60px" 
			android:id="@+id/pheno_image" 
			android:adjustViewBounds="true"
		/>
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
		>
		<TextView
			android:paddingLeft="6dip"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:layout_gravity="left" 
			android:textColor="@drawable/black"
			android:textSize="16dip" 
			android:textStyle="bold" 
			android:id="@+id/pheno_name"
			android:focusableInTouchMode="true"
			android:focusable="true"
		/>
		<TextView
			android:paddingTop="1dip"
			android:paddingLeft="6dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/pheno_text"
			android:adjustViewBounds="true"
		/>
		</LinearLayout>
		</LinearLayout>
		
		<LinearLayout
			android:paddingLeft="7dip"
			android:paddingRight="7dip"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="5px"
			android:gravity="left"		
			android:orientation="horizontal"
			>
		<ImageButton 
			android:scaleType="fitCenter"
			android:paddingTop="1dip"
			android:paddingRight="13dip"
			android:paddingLeft="13dip"
			android:layout_width="110px" 
			android:layout_height="110px" 
			android:adjustViewBounds="true"
			android:id="@+id/image" 
			/>

			<LinearLayout 
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content" 
			android:paddingTop="7dip"
			android:layout_marginTop="15px"
			android:layout_marginBottom="5px"
			android:gravity="center"
			android:orientation="horizontal">

			<LinearLayout
				android:id="@+id/take_photo" 
				android:layout_width="wrap_content" 
				android:layout_height="40dip"
				android:layout_marginTop="1px"
				android:background="@layout/button_field"
				android:clickable="true"
				android:gravity="center"
				android:focusable="true">
				
				<TextView
					android:id="@+id/take_photo_text" 
					android:textColor="@drawable/black"
					android:layout_width="fill_parent" 
					android:layout_height="fill_parent"
					android:layout_gravity="bottom" android:text="@string/Button_addPhoto"/>
					
				<ImageView
					android:layout_width="wrap_content"			
					android:layout_height="fill_parent"
					android:src="@drawable/ic_menu_camera_icon" 
				/>
				
			</LinearLayout>
		
			<LinearLayout
				android:id="@+id/replace_photo" 
				android:layout_width="wrap_content" 
				android:layout_height="40dip"
				android:layout_marginTop="1px"
				android:paddingTop="7dip"
				android:background="@layout/button_field"
				android:clickable="true"
				android:gravity="center"
				android:focusable="true">
				
				<TextView
					android:id="@+id/replace_photo_text" 
					android:textColor="@drawable/black"
					android:layout_width="fill_parent" 
					android:layout_height="fill_parent"
					android:layout_gravity="bottom" android:text="@string/Button_replacePhoto"/>
					
				<ImageView
					android:layout_width="wrap_content" 
					android:layout_height="fill_parent"
					android:src="@drawable/ic_menu_camera_icon" 
					/>
				
			</LinearLayout>	
		</LinearLayout>
		</LinearLayout>	

		

		<EditText
			android:id="@+id/notes"
			android:paddingTop="1dip"
			android:imeOptions="actionDone"
			android:layout_width="250px" 
			android:layout_height="wrap_content"
			android:layout_marginBottom="15px"
			android:width="0dip"
			android:inputType="textAutoCorrect|textMultiLine|textImeMultiLine"
			android:gravity="top" 
			android:lines="3"
			android:hint="@string/PlantInfo_addNotes"/>
			
		<LinearLayout
			android:paddingTop="3dip" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:paddingBottom="10dip">
				
			<Button
				android:id="@+id/save_changes" 
				android:textColor="@drawable/black"
				android:layout_width="250px" 
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:textStyle="bold"
				android:textSize="16dip"
				android:focusable="true"
			android:text="@string/Button_saveChanges"/>
		</LinearLayout>
	</LinearLayout>
</ScrollView>
</RelativeLayout>

