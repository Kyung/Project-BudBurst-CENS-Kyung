<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent"
	android:layout_width="fill_parent"
	android:id="@+id/AddSiteScroll"
>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/box_drawable_gray">

	<TextView
	android:id="@+id/instruction"
	android:layout_height="wrap_content"
	android:layout_width="fill_parent"
	android:layout_marginTop="10dip"
	android:layout_marginLeft="5dip"
	android:layout_marginRight="5dip"
	android:textSize="17dip"
	android:text="You can add new site here. Latitude and longitude below are your current location."
	android:focusableInTouchMode="true"
	android:focusable="true"
	>
	</TextView>
	
	<TextView
	android:id="@+id/sitename_lable"
	android:textStyle="bold"
	android:layout_below="@+id/instruction"
	android:layout_height="wrap_content"
	android:layout_width="fill_parent"
	android:layout_marginTop="10dip"
	android:layout_marginLeft="30dip"
	android:layout_marginRight="5dip"
	android:textSize="17dip"
	android:text="Site name"
	>
	</TextView>
	<EditText 
	android:id="@+id/sitename"
	android:layout_below="@+id/sitename_lable"
	android:hint="sitename"
	android:layout_marginLeft="30dip"
	android:layout_marginRight="30dip"	
	android:layout_height="wrap_content"
	android:layout_width="fill_parent"
	>
	</EditText>
	
	<TextView
	android:id="@+id/latitude_label"
	android:layout_below="@+id/sitename"
	android:layout_height="wrap_content"
	android:layout_width="fill_parent"
	android:layout_marginTop="5dip"
	android:layout_marginLeft="30dip"
	android:layout_marginRight="5dip"
	android:textStyle="bold"
	android:textSize="17dip"
	android:text="Latitude/Longitude"
	android:focusableInTouchMode="true"
	android:focusable="true"
	>
	</TextView>
	
	<EditText 
	android:id="@+id/latitude"
	android:layout_below="@+id/latitude_label"
	android:hint="Getting Latitude / Longitude..."
	android:layout_marginLeft="30dip"
	android:layout_marginRight="30dip"	
	android:layout_height="wrap_content"
	android:layout_width="fill_parent"
	android:enabled="false"
	android:textColor="@color/black"
	android:textSize="16px"
	>
	</EditText>

	<TextView
	android:id="@+id/longitude_label"
	android:textStyle="bold"
	android:layout_below="@+id/latitude"
	android:layout_height="wrap_content"
	android:layout_width="fill_parent"
	android:layout_marginTop="10dip"
	android:layout_marginLeft="30dip"
	android:layout_marginRight="5dip"
	android:textSize="17dip"
	android:text="Address"
	>
	</TextView>
	<EditText 
	android:id="@+id/longitude"
	android:layout_below="@+id/longitude_label"
	android:hint="Getting location..."
	android:textSize="16px"
	android:layout_marginLeft="30dip"
	android:layout_marginRight="30dip"	
	android:layout_height="wrap_content"
	android:layout_width="fill_parent"
	android:enabled="false"
	android:textColor="@color/black"
	>
	</EditText>

	<TextView
	android:id="@+id/comment_lable"
	android:layout_below="@+id/longitude"
	android:textStyle="bold"
	android:layout_marginTop="10dip"
	android:layout_marginLeft="30dip"
	android:layout_marginRight="5dip"
	android:layout_height="wrap_content"
	android:layout_width="fill_parent"
	android:textSize="17dip"
	android:text="Comment"
	>
	</TextView>
	<EditText 
	android:id="@+id/comment"
	android:layout_below="@+id/comment_lable"
	android:hint="Comment(option)"
	android:gravity="top"
	android:layout_marginLeft="30dip"
	android:layout_marginRight="30dip"	
	android:layout_height="100dip"
	android:layout_width="fill_parent"
	>
	</EditText>

	<LinearLayout
	android:id="@+id/buttons"
	android:layout_below="@+id/comment"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="horizontal">
	
	<Button
	android:id="@+id/save"
	android:textColor="@drawable/black"
	android:layout_width="130dip"
	android:layout_height="wrap_content"
	android:layout_margin="10dip"
	android:gravity="center" 
	android:textSize="20dip"
	android:text="Save"
	android:focusable="true"
	/>
	
	<Button
	android:id="@+id/cancel"
	android:textColor="@drawable/black"
	android:layout_width="130dip"
	android:layout_height="wrap_content"
	android:layout_margin="10dip"
	android:layout_centerHorizontal="true"
	android:gravity="center" 
	android:textSize="20dip"
	android:text="Cancel"
	android:focusable="true"
	/>
	</LinearLayout>
</RelativeLayout>
</ScrollView>